@model WeatherApp.Models.Weather

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.City)</h1>

<div>
    <h4>Weather</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Humidity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Humidity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TempFeelsLike)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempFeelsLike)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Temp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Temp)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WindSpeed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WindSpeed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WindDir)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WindDir)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WeatherIcon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeatherIcon)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ShowSearchForm">Back to Search</a>
</div>
